<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.peter.myport.user.UserMapper">


<insert id="insertUser" parameterType="com.peter.myport.user.User">
	insert into kim_user values( #{username }, #{password }, #{name}, #{userbirth }, #{address }, #{email}, #{phonenumber })
</insert>


<select id="selectLogin" parameterType="com.peter.myport.user.User" resultType="com.peter.myport.user.User">
	select * from kim_user where username = #{username }
</select> 


<update id="updateUser" parameterType="com.peter.myport.user.User" >
	update kim_user
	set password = #{password}, address = #{address}, phonenumber = #{phonenumber} 
	where username = #{username}
</update>



<delete id="deleteUser" parameterType="com.peter.myport.user.User">
delete from kim_user where username = #{username} 
</delete>
</mapper>